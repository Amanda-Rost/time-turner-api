generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum prioridade_enum {
  baixa
  media
  alta
}

enum status_enum {
  planejada
  concluida
  adiada
  cancelada
}

enum permissao_enum {
  leitor
  participante
  responsavel
}


model Usuario {
  id         String   @id @default(uuid())
  nome       String
  sobrenome  String?
  email      String   @unique
  senhaHash  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime?

  tarefas    Tarefa[]
  acessos    User_Task[]
}

model Tarefa {
  id          String          @id @default(uuid())
  usuarioId   String
  titulo      String
  data        DateTime
  alarme      Boolean
  prioridade  prioridade_enum
  status      status_enum
  descricao   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime?

  usuario  Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  acessos  User_Task[]
}

model User_Task {
  id         String          @id @default(uuid())
  tarefaId   String
  usuarioId  String
  permissao  permissao_enum
  createdAt  DateTime @default(now())
  updatedAt  DateTime?

  usuario Usuario @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  tarefa  Tarefa  @relation(fields: [tarefaId], references: [id], onDelete: Cascade)
}
